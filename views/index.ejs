    <body>
    
        <div class="container">
            <div class="navbar">
              <div class="logo">
                <a href="/home"><img src="https://i.ibb.co/kDVwgwp/logo.png" alt="RedStore" width="125px" /></a>
              </div>
              <nav>
                <ul id="MenuItems">
                  <li><a href="/new">Add New Products</a></li>
                  <li><a href="/list">Edit Inventory</a></li>
                </ul>
              </nav>
              <a href="cart.html"><img src="https://i.ibb.co/PNjjx3y/cart.png" alt="" width="30px" height="30px" /></a>
              <img src="https://i.ibb.co/6XbqwjD/menu.png" alt="" class="menu-icon" onclick="menutoggle()" />
            </div>
          </div>
          
          <div class="small-container">
            <div class="row row-2">
              <h2>All Products</h2>
            </div>
            <!---------------- product div start--------------- -->
            <div class="row">
            <% for (let i = 0; i < data.length; i++) { %>
              <div class="col-4">
                <img src=<%=data[i].img%> alt="" />
                <h4><%= data[i].name %></h4>
                <p>$<%=data[i].price%></p>
                <div class="buy">
                  <a href="/home/<%=data[i]._id%>/buy">
                    <p style="font-style: italic;">More information</p>
                   </a>
                </div>
              </div>
            <% } %>
          <!---------------- product div end--------------- -->
        </div>
